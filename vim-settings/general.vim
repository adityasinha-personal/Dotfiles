set nocompatible
syntax on

set noerrorbells
set tabstop=4 shiftwidth=4 expandtab
set hidden
set smarttab
set number
set relativenumber
set nowrap
set ignorecase
set smartcase
set incsearch
set splitbelow
set colorcolumn=100
set backupdir^=$HOME/.vim/tmp//
set directory^=$HOME/.vim/tmp//

"Marker line to switch to the next line
highlight ColorColumn ctermbg=0 guibg=lightgrey

